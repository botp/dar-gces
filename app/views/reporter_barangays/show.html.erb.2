<h1>Barangay info:</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>ARC</th>
      <th>Municipality</th>
      <th>District</th>
      <th>Province</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @barangays.each do |barangay| %>
      <tr>
        <td><%= barangay.name %></td>

        <% if barangay.arc %>
        <td><%= barangay.arc.name %></td>
        <% else %>
        <td><%= "non-ARC" %></td>
        <% end %>

        <td><%= barangay.municipality.name %></td>
        <td><%= barangay.municipality.district.name %></td>
        <td><%= barangay.municipality.district.province.name %></td>
      </tr>
    
    <% end %>
  </tbody>
</table>
<br>

<div>
<div style="margin-left:50px">
<% @barangays.each do |barangay| %>

  <% if @reports_selection %>
  
    <% @reports_selection.each do |report| %>

      <div>
      <%= render partial:"reporter_"+@reports_program_hash[report] , :locals => {:barangay => barangay} %>
      </div>
      
    <% end %>

  <% end %>
  
<% end %>
</div>
</div>


<br>
