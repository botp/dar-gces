<h1>Barangay info:</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Name</th>
      <th>ARC</th>
      <th>Municipality</th>
      <th>District</th>
      <th>Province</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @barangays.each do |barangay| %>
      <tr>
        <td><%= barangay.tag %></td>
        <td><%= barangay.name %></td>

        <% if barangay.arc %>
        <td><%= barangay.arc.name %></td>
        <% else %>
        <td><%= "non-ARC" %></td>
        <% end %>

        <td><%= barangay.municipality.name %></td>
        <td><%= barangay.municipality.district.name %></td>
        <td><%= barangay.municipality.district.province.name %></td>
      </tr>

      <% if @reports_selection %>
        <tr>
        <% @reports_selection.each do |report| %>
          <tr>
          <td><%= report %></td>
          <td><%= @reports_program_hash[report] %></td>
          </tr>
        <% end %>
        </tr>
      <% end %>
      

    <% end %>
  </tbody>
</table>

<br>
